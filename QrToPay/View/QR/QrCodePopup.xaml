<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popup="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    xmlns:vm="clr-namespace:QrToPay.ViewModels.QR"
    x:Class="QrToPay.View.QrCodePopup"
    x:DataType="vm:QrCodePopupViewModel">

    <VerticalStackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Image Source="{Binding QrCodeImage}" WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="Center" />
        <Button Text="Zamknij" Clicked="OnCloseButtonClicked" HorizontalOptions="Center" VerticalOptions="End" />
    </VerticalStackLayout>
</popup:Popup>