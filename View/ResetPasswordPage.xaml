<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QrToPay.ViewModels"
             x:Class="QrToPay.View.ResetPasswordPage"
             x:DataType="vm:ResetPasswordViewModel">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" Spacing="10" Padding="50,0,0,0">
            <Image Source="logo.png" HeightRequest="120" WidthRequest="120"/>
        </StackLayout>
    </Shell.TitleView>
    <VerticalStackLayout
    Padding="30,90,30,0"
    Spacing="10">
        <Label
        Padding="0,0,0,10"
        Text="Email lub numer telefonu:"
        Style="{StaticResource SubHeadline}"/>
        <Frame>
            <Entry
            x:Name="EmailPhoneEntry"
            Placeholder="Email/Telefon"
            Text="{Binding EmailPhone, Mode=TwoWay}"
            HorizontalOptions="Fill" />
        </Frame>

        <Button
        Text="KONTYNUUJ" 
        SemanticProperties.Hint="Confirm"
        Command="{Binding ConfirmCommand}"
        IsEnabled="{Binding IsNotBusy}"
        HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>